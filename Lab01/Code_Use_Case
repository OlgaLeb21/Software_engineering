@startuml

actor User as user
actor Administrator as admin
actor Client as client
actor DeliveryPerson as deliveryPerson

user <|--- client
user <|--- admin
user <|--- deliveryPerson

rectangle Lavka {
user --> (CreateAnAccount)
admin --> (UpdateCatalog)
admin --> (TechnicalSupport)
admin --> (StaffSelection)
client --> (ViewProduct)
client --> (MakeAnOrder)
client --> (Question)
client --> (AddACard)
client --> (HistoryOfOrders)
deliveryPerson --> (ExecuteAnOrder)
deliveryPerson --> (CallTheClient)
}

@enduml
